<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Campground Adding Page</h1>
            <h5 style="text-align: center; padding:10px 0;">Enter to sumbit new Campground</h5>
            <div style="width:30%; margin:0 auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group"> 
                        <input class="form-control" type="text" placeholder="Campground name" name="campName">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image url" name="image">
                    </div>
                    <div class="form-group"> 
                        <input class="form-control" type="number" placeholder="Campground Price per night" name="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="description" name="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-default btn-success btn-block">Submit</button>
                    </div>
                 </form>
              <a href="/campgrounds">Go Back</a> 
            </div>
    </div>
</div>

<% include ../partials/footer %>